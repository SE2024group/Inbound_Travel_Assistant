<view class="container">
  <!-- 景点名称 -->
  <view class="attraction-name">
    {{attractionName}}
  </view>

  <!-- 图片轮播 -->
  <view class="swiper-wrap">
    <t-swiper wx:if="{{imgSrcs.length > 0}}" current="{{current}}" autoplay="{{autoplay}}" duration="{{duration}}" interval="{{interval}}" navigation="{{navigation}}" imageProps="{{swiperImageProps}}" list="{{imgSrcs}}" />
  </view>

  <!-- 描述内容 -->
  <view class="description-box">
    <text class="description-text">
      {{description}}
    </text>
  </view>

  <!-- 票务信息 -->
  <view class="ticket-info">
    <text class="opening-hours">Opening Hours: {{openingHours}}</text>
    <navigator class="reservation-link" url="{{reservationLink}}" open-type="navigate">
      <button class="reservation-button">Reserve Tickets</button>
    </navigator>
  </view>
</view>