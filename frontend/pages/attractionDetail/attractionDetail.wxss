/* 主容器样式 */
.container {
  background: linear-gradient(145deg, #f9f1f3, #e8dfe4);
  /* 渐变背景，深色主题 */
  padding: 20rpx;
  min-height: 100vh;
  /* 确保页面填满视窗 */
}

/* 景点名称 */
.attraction-name {
  font-size: 60rpx;
  font-weight: bold;
  color: #666;
  /* 高亮颜色 */
  text-align: center;
  margin-top: 30rpx;
  text-shadow: 2rpx 2rpx 5rpx rgba(0, 0, 0, 0.5);
  /* 添加阴影效果 */
}

/* 图片轮播样式 */
.swiper-wrap {
  width: 100%;
  margin-top: 20rpx;
  border-radius: 15rpx;
  /* 圆角效果 */
  overflow: hidden;
  /* 确保图片不溢出 */
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  /* 卡片阴影 */
}

/* 描述框 */
.description-box {
  margin: 30rpx auto;
  padding: 20rpx;
  /* 深色背景，与页面协调 */
  border: 2rpx solid #45a29e;
  /* 边框颜色与主题一致 */
  border-radius: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.3);
  /* 轻微阴影效果 */
  color: black;
  /* 白色文字 */
  line-height: 1.6;
  text-align: justify;
  font-size: 32rpx;
}

/* 票务信息 */
.ticket-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 30rpx;
}

.opening-hours {
  font-size: 36rpx;
  color: #246e12;
  margin-bottom: 15rpx;
}

.reservation-link {
  text-decoration: none;
  /* 去掉默认的下划线 */
}

.reservation-button {
  background-color: #45a29e;
  /* 按钮背景 */
  color: #ffffff;
  /* 按钮文字颜色 */
  font-size: 32rpx;
  padding: 15rpx 30rpx;
  border: none;
  border-radius: 25rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.3);
  /* 添加阴影 */
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.reservation-button:active {
  transform: scale(0.98);
  /* 按压效果 */
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  font-size: 35rpx;
  color: #44c0ba;
  text-decoration: underline;
}

.no-appointment {
  font-size: 35rpx;
  color: #44c0ba;
  text-decoration: underline;
}