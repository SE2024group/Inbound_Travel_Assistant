/* pages/register/index.wxss */
.container {
  background: linear-gradient(to bottom, #f9f5f6, #e3ecf2);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 50rpx;
  min-height: 100vh;
}

.logo {
  width: 200rpx;
  margin-bottom: 20rpx;
  border-radius: 15px;
}

.welcome-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 40rpx;
}

.input,
.textarea {
  width: 80%;
  padding: 10rpx;
  margin-bottom: 20rpx;
  border: 1px solid #ccc;
  border-radius: 5rpx;
  font-size: 16rpx;
}

.textarea {
  height: 100rpx;
  resize: none;
}

.avatar-upload {
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.upload-button {
  background-color: #2196F3;
  color: white;
  padding: 10rpx 20rpx;
  border: none;
  border-radius: 5rpx;
  font-size: 16rpx;
}

.avatar-preview {
  width: 100rpx;
  height: 100rpx;
  margin-top: 10rpx;
  border-radius: 50%;
}

.agreement {
  width: 80%;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.checkbox-label {
  display: flex;
  align-items: center;
}

.agreement-text {
  margin-left: 10rpx;
  font-size: 14rpx;
  color: #555;
}

.agreement-link {
  color: #1E90FF;
  text-decoration: underline;
}

.button-container {
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

button {
  padding: 15rpx 30rpx;
  font-size: 16rpx;
  color: white;
  text-align: center;
  border: none;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  transition: transform 0.2s ease;
}

button:active {
  transform: scale(0.95);
}

.register-button {
  background-color: #4caf50;
  width: 45%;
}

.back-button {
  background-color: #f44336;
  width: 45%;
}