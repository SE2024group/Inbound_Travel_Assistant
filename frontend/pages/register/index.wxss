/* /pages/register/register.wxss */

.container {
  background: linear-gradient(to bottom, #f9f5f6, #e3ecf2);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 50rpx;
  min-height: 100vh;
}

.avatar-section {
  width: 80%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-preview {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background-color: #ccc;
  /* Fallback color */
  object-fit: cover;
  margin-bottom: 10rpx;
}

.upload-button {
  background-color: #2196F3;
  color: white;
  padding: 12rpx 24rpx;
  border: none;
  border-radius: 5rpx;
  font-size: 20rpx;
}

.input,
.textarea {
  width: 80%;
  padding: 12rpx;
  margin-bottom: 25rpx;
  border: 1px solid #ccc;
  border-radius: 5rpx;
  font-size: 24rpx;
  /* Adjusted to match login page */
}

.textarea {
  height: 100rpx;
  resize: none;
}

.agreement {
  width: 80%;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.checkbox-label {
  display: flex;
  align-items: center;
}

.agreement-text {
  margin-left: 10rpx;
  font-size: 24rpx;
  /* Adjusted to match login page */
  color: #555;
}

.agreement-link {
  color: #1E90FF;
  text-decoration: underline;
}

.button-container {
  width: 90%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

button {
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  /* Adjusted to match login page */
  color: white;
  text-align: center;
  border: none;
  border-radius: 50rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
  transition: transform 0.2s ease;
}

button:active {
  transform: scale(0.95);
}

.register-button {
  background-color: #4caf50;
  width: 45%;
}

.back-button {
  background-color: #f54e43;
  width: 45%;
}