/* pages/record/record.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 150vh;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.header-title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
  text-align: center;
}

.header-image-container {
  width: 75%;
  position: relative;
  overflow: hidden;
  border-radius: 10px;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
}

.header-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.aspect-ratio-16-9 {
  padding-top: 50%;
}


.large-text-box {
  width: 85%;
  height: 150px;
  border: 2px solid #4CAF50;
  border-radius: 12px;
  background-color: #f9f9f9;
  margin: 20px auto;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
  position: relative;
}

.large-input {
  width: 100%;
  height: 100%;
  border: none;
  background-color: transparent;
  font-size: 24px;
  color: #333;
  text-align: center;
  padding-left: 5px;
  padding-right: 5px;
  box-sizing: border-box;
  white-space: normal;
  overflow-wrap: break-word;
  resize: none;
  align-items: center;
  justify-content: center;
  line-height: 1.5;
}


.large-input:focus {
  outline: none;
}


.button-row {
  position: absolute;
  bottom: 10px;
  right: 10px;
  display: flex;
  gap: 5px;
}

.send-button {
  font-size: 14px;
  color: white;
  background-color: #4CAF50;
  border: none;
  border-radius: 8px;
  cursor: pointer;
  transition: background-color 0.3s ease, box-shadow 0.3s ease;
  z-index: 2;
}

.clear-button {
  font-size: 14px;
  color: white;
  background-color: #ff4d4f;
  border: none;
  border-radius: 8px;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
  cursor: pointer;
  transition: background-color 0.3s ease, box-shadow 0.3s ease;
  z-index: 2;
}

.send-button:active {
  background-color: #388E3C;
  /* 按下时颜色变深 */
  box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.1);
}

.clear-button:active {
  background-color: #d32f2f;
  /* 按下时颜色变深 */
  box-shadow: 0px 1px 2px rgba(0, 0, 0, 0.1);
}

.record-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.microphone-icon {
  width: 80px;
  height: 80px;
  margin-bottom: 8px;
  transition: transform 0.2s, opacity 0.2s;
  /* 动画过渡 */
}

.record-button.pressed .microphone-icon {
  opacity: 0.6;
  /* 改变透明度 */
}

.record-text {
  color: #333;
  font-size: 14px;
  font-weight: bold;
  text-align: center;
}

.play-button-container {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.play-button {
  width: 250px;
  height: 50px;
  background: linear-gradient(90deg, #4CAF50, #81C784);
  border: none;
  border-radius: 25px;
  margin-top: 20px;
  color: white;
  font-size: 16px;
  font-weight: bold;
  text-align: center;
  line-height: 50px;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
  cursor: pointer;
  transition: all 0.3s ease;
  /* 动画过渡 */
}

.play-button:active {
  background: linear-gradient(90deg, #2E7D32, #4CAF50);
  /* 按下时颜色更深 */
  box-shadow: 0px 3px 6px rgba(58, 55, 55, 0.2);
  /* 按下时阴影变浅 */
}

.common-phrases {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  flex-wrap: wrap;
  justify-content: space-between;
  gap: 10px;
  width: 90%;
  margin: 20px auto;
}

.phrase-box {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 0 0 40%;
  padding: 15px;
  border-radius: 15px;
  background: #f2f2f2;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
  text-align: center;
}

.phrase-text {
  font-size: 18px;
  color: #333;
  text-align: center;
}