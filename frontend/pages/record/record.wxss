/* pages/record/record.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 110vh;
}

.large-text-box {
  width: 90%; 
  height: 200px; 
  border: 2px solid #4CAF50;
  border-radius: 12px; 
  background-color: #f9f9f9;
  margin: 20px auto;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
}

.large-text {
  font-size: 24px;
  color: #333;
  font-weight: bold;
}

.record-button {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.microphone-icon {
  width: 100px;
  height: 100px;
  margin-bottom: 8px;
  transition: transform 0.2s, opacity 0.2s; /* 动画过渡 */
}

.record-button.pressed .microphone-icon {
  opacity: 0.6; /* 改变透明度 */
}

.record-text {
  color: #333;
  font-size: 14px;
  font-weight: bold;
  text-align: center;
}

.play-button-container {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 20px;
  gap: 40px;
}

.clear-button {
  position: flex;
  right: 10px;
  padding: 5px 10px;
  font-size: 14px;
  color: white;
  background-color: #ff4d4f;
  border: none;
  border-radius: 8px;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
  cursor: pointer;
  transition: all 0.3s ease;
}

.clear-button:active {
  background-color: #d32f2f; /* 悬停时颜色变深 */
}

.play-button {
  width: 250px;
  height: 50px;
  background: linear-gradient(90deg, #4CAF50, #81C784);
  border: none;
  border-radius: 25px;
  color: white;
  font-size: 16px;
  font-weight: bold;
  text-align: center;
  line-height: 50px;
  box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
  cursor: pointer;
  transition: all 0.3s ease; /* 动画过渡 */
}

.play-button:active {
  background: linear-gradient(90deg, #2E7D32, #4CAF50); /* 按下时颜色更深 */
  box-shadow: 0px 3px 6px rgba(0, 0, 0, 0.2); /* 按下时阴影变浅 */
}

.common-phrases {
  display: flex;
  flex-wrap: wrap; /* 自动换行 */
  justify-content: space-between;
  gap: 10px;
  width: 90%;
  margin: 20px auto;
}

.phrase-box {
  flex: 0 0 40%; /* 每个元素占据父容器宽度的48% */
  padding: 15px;
  border-radius: 15px;
  background: #f2f2f2;
  box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
  text-align: center;
}

.phrase-text {
  font-size: 18px;
  color: #333;
}

