.container {
  background: linear-gradient(to bottom, #f9f5f6, #e3ecf2);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 100rpx;
  min-height: 100vh;
}

.title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
}

.username-input {
  width: 80%;
  padding: 10px;
  margin-bottom: 20px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 16px;
}

.login-button {
  width: 80%;
  padding: 10px;
  background-color: #19a3ad;
  /* 微信绿色 */
  color: white;
  font-size: 16px;
  border: none;
  border-radius: 5px;
}

.logo {
  width: 200rpx;
  margin-bottom: 50rpx;
}

.welcome-text {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 80rpx;
}

.login-button {
  width: 80%;
  margin-bottom: 30rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 600rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  text-align: center;
}

.modal-text {
  font-size: 32rpx;
  margin-bottom: 40rpx;
}

.modal-button {
  width: 100%;
}