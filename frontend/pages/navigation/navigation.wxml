          <view class="app-name">Red Book</view>
        </view>
      </view>
    </view>
  </view>

  <view class="category-section-container">
    <image class="category-section-bg" src="https://cloud.tsinghua.edu.cn/f/f123cd6dbc3d42ad9b6f/?dl=1" mode="aspectFill" />
    <view class="ticket-reservation-section">
      <view class="title-container">
        <view class="title2">Ticket Reservations</view>
        <navigator url="../attractionSearch/attractionSearch" open-type="navigate">
          <button class="view-all-button">View All</button>
        </navigator>
      </view>
      <view class="attraction-list">
        <block wx:for="{{attractions}}" wx:key="name">
          <navigator class="attraction-item" url="/pages/attractionDetail/attractionDetail?name={{item}}" open-type="navigate">
            {{item}}
          </navigator>
        </block>
      </view>
    </view>
  </view>
</view>