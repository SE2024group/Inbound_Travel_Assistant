.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: rgb(255, 255, 255);
  margin-bottom: 30rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.category-section-container {
  position: relative;
  width: 100%;
  height: auto;
  padding: 0;
  margin: 0;
}

.category-section-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 1; /* 调整透明度，0是完全透明，1是完全不透明 */
  z-index: -1; /* 将背景图置于底层 */
  background-size: cover;
}

.category-section {
  width: 100%;
  margin-bottom: 40rpx;
}

.category-title {
  font-size: 36rpx;
  font-weight: bold;
  color: rgb(235, 235, 235);
  margin-bottom: 20rpx;
  margin-left: 30rpx;
}

.app-list {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.app-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.app-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.app-name {
  font-size: 28rpx;
  color: rgb(240, 240, 240);
}

.ticket-reservation-section {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 40rpx;
}

.title-container {
  display: flex;
  align-items: flex-start;
  margin-left: 20rpx;
  width: 100%;
}

.title2 {
  font-size: 40rpx;
  font-weight: bold;
  color: rgb(255, 255, 255);
  margin-bottom: 30rpx;
  margin-left: 20rpx;
}

.view-all-button {
  background-color: #246e12;
  color: white;
  border: none;
  margin-left: 100rpx;
  border-radius: 30rpx;
  font-size: 28rpx;
}

.attraction-list {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  text-align: left;
  margin-left: 40rpx;
}

.attraction-item {
  font-size: 33rpx;
  color: rgb(179, 245, 24);
  margin-bottom: 15rpx;
  text-align: left;
  text-decoration: underline; /* Adds underline */
}

