/* 容器样式 */
.container {
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 110vh;
  /* 占满整个视窗高度 */
  overflow: hidden;
  overflow-x: hidden;
}

/* Tab 样式 */
.tab-container {
  width: 100%;
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #ffffff;
  border-bottom: 1px solid #e0e0e0;
  height: 100rpx;
  margin-bottom: 10rpx;
  /* 动态占据剩余空间 */
}

.tab-item {
  width: 100%;
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  color: #666;
  padding: 30rpx 0;
  /* 提高点击区域 */
  transition: color 0.3s, background-color 0.3s;
  border-bottom: 4rpx solid transparent;
}

.tab-item.active {
  color: #246e12;
  font-weight: bold;
  border-bottom: 6rpx solid #246e12;
}

/* 内容样式 */
.content {
  width: 100%;
  flex: 4;
  /* 动态占据剩余空间 */
  overflow-y: scroll;
  background-color: #f9f5f6;
  /* 区别于 tab 背景 */
}


.title {
  font-size: 40rpx;
  font-weight: bold;
  color: rgb(83, 107, 38);
  margin-bottom: 30rpx;
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.category-section-container-app {
  position: relative;
  width: 100%;
  height: auto;
  padding: 20rpx;
  margin: 10rpx 0;
  background: linear-gradient(145deg, #eef3f8, #dfe7ee);
  /* 浅蓝色渐变 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border-radius: 15rpx;
}

.category-section-container-ticket {
  position: relative;
  width: 100%;
  height: auto;
  padding: 20rpx;
  margin: 10rpx 0;
  background: linear-gradient(145deg, #f2f6fa, #e3ebf2);
  /* 柔和蓝灰色调 */
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  border-radius: 15rpx;
}

.category-section-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  opacity: 0.3;
  z-index: -1;
  background-size: cover;
  border-radius: 15rpx;
}

.category-section {
  max-height: 100%;
  width: 100%;
  margin-bottom: 40rpx;
}

.category-title {
  font-size: 36rpx;
  font-weight: bold;
  color: rgb(0, 0, 0);
  margin-bottom: 20rpx;
  margin-left: 30rpx;
}

.app-list {
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}

.app-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
  background-color: #f7deec;
  /* 添加白色背景色 */
  border-radius: 10rpx;
  padding: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.1s ease, box-shadow 0.1s ease;
}

/* 外部容器样式 */
.app-swiper {
  width: 95%;
  height: 200px;
}

.spot-swiper {
  width: 95%;
  height: 500px;
}

.app-scroll {
  width: 100%;
  /* 占满屏幕宽度 */
  height: auto;
  /* 根据内容自动扩展 */
  padding: 10rpx 0;
  overflow-y: scroll;
  /* 垂直滚动 */
}

/* 每个卡片样式 */
.app-card {
  display: flex;
  flex-direction: row;
  /* 图片与文字横向排列 */
  align-items: center;
  padding: 20rpx;
  margin-bottom: 15rpx;
  /* 每个卡片的间距 */
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.spot-card {
  display: flex;
  flex-direction: row;
  /* 图片与文字横向排列 */
  align-items: center;
  padding: 20rpx;
  margin-bottom: 15rpx;
  /* 每个卡片的间距 */
  background-color: #ffffff;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 图片样式 */
.app-image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  /* 图片与文字的间距 */
  border-radius: 50%;
  margin-bottom: 10rpx;
  /* 圆角效果 */
}

/* 应用信息样式 */
.app-info {
  flex: 1;
  /* 占据剩余空间 */
  display: flex;
  flex-direction: column;
  /* 垂直布局 */
  justify-content: center;
}

/* 应用名称 */
.app-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 10rpx;
}

/* 应用描述 */
.app-desc {
  font-size: 24rpx;
  color: #666666;
  line-height: 1.5;
}


/* 点击时的效果 */
.app-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.15);
}



.ticket-reservation-section {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 40rpx;
}

.title-container {
  display: flex;
  align-items: flex-start;
  margin-left: 20rpx;
  width: 100%;
}

.title2 {
  font-size: 40rpx;
  font-weight: bold;
  color: rgb(83, 107, 38);
  margin-bottom: 30rpx;
  margin-left: 20rpx;
}

.button-container {
  display: inline-block;
  align-items: right;
  text-align: right;
  /* 垂直居中 */
  padding: 0 150rpx;
  /* 左右留白，防止元素贴边 */
  height: 50rpx;
  /* 可根据需求调整 */
}

.view-all-button {
  margin: 0;
  background: linear-gradient(90deg, #4CAF50, #81C784);
  /* 渐变背景 */
  color: white;
  /* 按钮文字颜色 */
  border: none;
  border-radius: 30rpx;
  /* 圆角 */
  font-size: 28rpx;
  /* 字体大小保持原样 */
  display: inline-block;
  /* 使按钮宽度仅匹配内容 */
  font-weight: bold;
  /* 文字加粗 */
  text-align: center;
  /* 文字居中 */
  line-height: 50rpx;
  /* 确保文字垂直居中 */
  box-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.2);
  /* 按钮阴影 */
  transition: all 0.3s ease;
  /* 动画过渡 */
  overflow: hidden;
}

/* 悬停效果 */
.view-all-button:hover {
  background: linear-gradient(90deg, #388E3C, #66BB6A);
  /* 悬停时颜色更深 */
  box-shadow: 0 6rpx 10rpx rgba(0, 0, 0, 0.3);
  /* 增强阴影效果 */
  transform: translateY(-2rpx);
  /* 轻微上移 */
}

/* 按下按钮时效果 */
.view-all-button:active {
  transform: scale(0.95);
  /* 按下时按钮缩小 */
  background: linear-gradient(90deg, #2E7D32, #4CAF50);
  /* 按下时颜色更深 */
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.15);
  /* 按下时阴影变浅 */
}


.attraction-list {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  text-align: left;
  margin-left: 40rpx;
}

.attraction-item {
  font-size: 33rpx;
  color: rgb(118, 66, 214);
  margin-bottom: 15rpx;
  text-align: left;
  text-decoration: underline;
  /* Adds underline */
}