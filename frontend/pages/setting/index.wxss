.settings-page {
  background: linear-gradient(to bottom, #f9f5f6, #e3ecf2);
  /* 与 usercenter 相同的背景 */
  min-height: 100vh;
  padding: 16px;
  box-sizing: border-box;
}

.settings-header {
  text-align: center;
  margin-bottom: 20px;
}

.settings-title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
}

.settings-section {
  background-color: #ffffff;
  border-radius: 8px;
  box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
  overflow: hidden;
}

.settings-item {
  padding: 16px;
  font-size: 16px;
  color: #333;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* 左右两端对齐 */
}

.settings-item-disabled {
  pointer-events: none;
}

.settings-item:last-child {
  border-bottom: none;
}

.settings-item:active {
  background-color: #e0e0e0;
  /* 点击效果 */
}

.settings-switch {
  width: 52px;
  /* 开关的宽度 */
  height: 32px;
  /* 开关的高度 */
}

.language-text {
  color: #999;
  /* 较暗的文字颜色 */
  font-size: 16px;
}