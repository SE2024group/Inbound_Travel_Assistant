/* pages/accountInfo/index.wxss */
.account-info-page {
  background: linear-gradient(to bottom, #f9f5f6, #e3ecf2);
  /* 渐变背景 */
  padding: 16px;
  padding-top: 120px;
  min-height: 100vh;
  box-sizing: border-box;
}

.account-info-header {
  margin-bottom: 20px;
}

.account-info-title {
  font-size: 24px;
  font-weight: bold;
  color: #333;
  text-align: center;
}

.account-info-section {
  background-color: #ffffff;
  margin-top: 20px;
  padding: 0;
  border-radius: 8px;
  overflow: hidden;
  /* 避免边框重叠 */
  box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
}

.account-info-item {
  padding: 16px;
  font-size: 16px;
  color: #333;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
  /* 左右对齐 */
}

.account-info-item:last-child {
  border-bottom: none;
  /* 去除最后一项的分割线 */
}

.account-info-value {
  color: #999;
  /* 辅助信息的文字颜色 */
  font-size: 16px;
}