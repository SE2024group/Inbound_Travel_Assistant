.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #f5f5f5;
}

.image-container {
  flex: 8;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
}

.image-display {
  max-width: 100%;
  max-height: 100%;
}

.scroll-bar {
  flex: 2;
  display: flex;
  white-space: nowrap;
  background-color: #f9f9f9;
  overflow: hidden;
}

.scroll-item {
  display: inline-block;
  padding: 10px 20px;
  margin: 10px;
  background-color: #ffffff;
  border-radius: 20px;
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  text-align: center;
  font-size: 16px;
  cursor: pointer;
}