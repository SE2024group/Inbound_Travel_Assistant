.container {
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: #f5f5f5;
}

.image-container {
  height: 500px;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
}

.image-display {
  max-width: 100%;
  max-height: 100%;
}

.action-button {
  margin: 10px;
  padding: 10px;
  background-color: #04b61c;
  color: white;
  /* 白色文字 */
}

.action-button[disabled] {
  background-color: #ccc;
  /* 灰色背景 */
  color: #666;
  /* 深灰色文字 */
}

.scroll-bar {
  height: 140px;
  display: flex;
  white-space: nowrap;
  background-color: #f9f9f9;
  overflow: hidden;
}

.image-canvas {
  width: 100%;
  /* 确保画布覆盖整个图片 */
  height: 100%;
}

.scroll-item {
  display: inline-block;
  width: 100px;
  /* 保持原始宽度 */
  margin: 10px;
  text-align: center;
  transition: transform 0.3s, box-shadow 0.3s, border 0.3s;
}

.scroll-item.selected {
  transform: scale(1.1);
  /* 适度放大效果 */
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
  /* 增强的阴影效果 */
  border: 3px solid #007aff;
  /* 蓝色边框 */
  border-radius: 10px;
  background-color: #f0f8ff;
  /* 微弱的背景颜色 */
}

.item-image {
  width: 50px;
  /* 保持和原始大小一致 */
  height: 50px;
  /* 保持和原始大小一致 */
  border-radius: 50%;
  /* 圆形图片 */
}

.item-description {
  display: block;
  /* 使用 block 布局，支持换行 */
  overflow: hidden;
  /* 超出部分隐藏 */
  text-overflow: ellipsis;
  /* 超出部分用省略号 */
  line-height: 1.5;
  /* 设置行高 */
  height: 3em;
  /* 固定两行的高度（行高 × 2） */
  font-size: 14px;
  /* 根据需求调整字体大小 */
  white-space: normal;
  /* 允许文字换行 */
}