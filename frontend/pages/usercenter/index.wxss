.profile-page {
  background: linear-gradient(to bottom, #f9f5f6, #e3ecf2);
  padding: 16px;
  padding-top: 120px;
  /* 添加顶部留白 */
}

.user-card {
  background-color: #ffffff;
  padding: 20px;
  border-radius: 8px;
  text-align: center;
  box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
  /* 添加底部间距 */
}


.user-avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  margin-bottom: 10px;
}

.user-name {
  font-size: 18px;
  font-weight: bold;
}

.user-stats {
  display: flex;
  justify-content: space-around;
  margin-top: 10px;
}

.stat-item {
  font-size: 14px;
  color: #666;
}

.menu-section {
  display: flex;
  justify-content: space-around;
  padding: 20px 0;
}

.menu-item {
  text-align: center;
  color: #888;
}

.settings-section {
  background-color: #ffffff;
  margin-top: 20px;
  padding: 0;
  border-radius: 8px;
  overflow: hidden;
  /* 避免边框重叠 */
  box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
}

.settings-item {
  padding: 16px;
  font-size: 16px;
  color: #333;
  border-bottom: 1px solid #eee;
  /* 分割线 */
  display: flex;
  align-items: center;
}

.settings-item:active {
  background-color: #e0e0e0;
  /* 点击效果 */
}


.settings-item:last-child {
  border-bottom: none;
  /* 去除最后一个分割线 */
}

.settings-item:hover {
  background-color: #f5f5f5;
  /* 鼠标悬浮效果 */
}