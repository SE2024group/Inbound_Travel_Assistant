/* /pages/usercenter/index.wxss */

.profile-page {
  background: linear-gradient(to bottom, #f9f5f6, #e3ecf2);
  padding: 16px;
  padding-top: 30px;
  min-height: 130vh;
  box-sizing: border-box;
}

.user-card {
  background-color: #ffffff;
  padding: 20px;
  border-radius: 8px;
  text-align: center;
  box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 120px;
  /* px unit */
  height: 120px;
  /* px unit */
  border-radius: 50%;
  object-fit: cover;
  margin-bottom: 10px;
}

.user-name {
  font-size: 22px;
  /* px unit */
  font-weight: bold;
  color: #333;
  margin-bottom: 5px;
}

.user-motto {
  font-size: 16px;
  /* px unit */
  color: #666;
  margin-bottom: 15px;
  font-style: italic;
}

.dietary-section {
  background-color: #ffffff;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
  margin-bottom: 20px;
}

.picker-container {
  margin-bottom: 20px;
}

.picker-label {
  font-size: 16px;
  /* px unit */
  color: #333;
  margin-bottom: 5px;
  display: block;
}

.picker {
  width: 90%;
  padding: 12px;
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size: 16px;
  /* px unit */
  color: #555;
  background-color: #f9f9f9;
}

.open-modal-button {
  margin-top: 10px;
  padding: 10px 20px;
  background-color: #3a9bfd;
  color: #ffffff;
  border: none;
  border-radius: 15px;
  font-size: 16px;
}

/* New Button Styles */
.select-dietary-button {
  display: inline-flex;
  justify-content: center;
  align-items: center;
  background: linear-gradient(90deg, #4CAF50, #81C784);
  /* Background Gradient */
  color: white;
  /* Text Color */
  border-radius: 30px;
  /* Rounded Corners */
  font-size: 14px;
  /* Adjusted Font Size */
  text-align: center;
  /* Centered Text */
  height: 30px;
  /* Button Height */
  line-height: 40px;
  /* Line Height */
  padding: 0 15px;
  /* Padding */
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
  /* Button Shadow */
  transition: all 0.3s ease;
  /* Animation Transition */
  margin-top: 10px;
  /* Space above the button */
  cursor: pointer;
  /* Pointer Cursor on Hover */
}

.select-dietary-button:active {
  transform: scale(0.95);
  /* Button Press Effect */
}

/* Selected Dietary Restrictions Tags */
.selected-dietary-restrictions {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10px;
  justify-content: flex-start;
  /* Align tags to the left */
}

.restriction-tag {
  background-color: #ffeb3b;
  color: #333;
  padding: 5px 10px;
  border-radius: 15px;
  margin: 5px;
  font-size: 14px;
}

.placeholder-text {
  color: #999;
  font-size: 14px;
}

.settings-section {
  margin-top: 20px;
  margin-bottom: 20px;
  background-color: #ffffff;
  padding: 0;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
}

.settings-item {
  padding: 16px;
  font-size: 16px;
  /* Consistent */
  color: #333;
  border-bottom: 1px solid #eee;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.settings-item:active {
  background-color: #e0e0e0;
}

.settings-item:last-child {
  border-bottom: none;
}

.version-text {
  color: #999;
  font-size: 16px;
  /* Consistent */
}

/* Modal Styles */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal {
  background-color: #fff;
  width: 80%;
  padding: 20px;
  border-radius: 8px;
  max-height: 60vh;
  /* 设置最大高度为视口高度的80% */
  overflow-y: auto;
  /* 超出部分可滚动 */
}

.modal-body {
  margin-top: 20px;
  margin-bottom: 20px;
  padding-right: 10px;
  /* 为滚动条留出空间 */
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

.close-button {
  background: none;
  border: none;
  font-size: 20px;
  cursor: pointer;
}


.checkbox-label {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

.checkbox-text {
  margin-left: 10px;
  font-size: 16px;
  color: #333;
}

.modal-footer {
  text-align: right;
}

.save-button {
  padding: 10px 20px;
  background-color: #4caf50;
  color: #ffffff;
  border: none;
  border-radius: 5px;
  font-size: 16px;
}

.preference-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10px;
  font-weight: bold;
}

.header-placeholder {
  /* 与下方 .checkbox-text 列宽相匹配，可根据实际需求调整 */
  width: 100px;
}

.header-like,
.header-dislike {
  text-align: center;
  flex: 0 0 50px;
  /* 根据您的实际按钮列宽调整 */
  color: #333;
}

.header-clear-placeholder {
  width: 30px;
  /* 与clear-button相似的宽度 */
}

/* 饮食偏好标签样式 */
.preference-tag {
  background-color: #fff7ad;
  color: #333;
  padding: 1px 5px;
  border-radius: 15px;
  margin: 5px;
  font-size: 14px;
  display: flex;
  align-items: center;
}

/* 修改 .preference-item 样式 */
.preference-item {
  display: flex;
  align-items: center;
  /* 垂直居中对齐 */
  justify-content: space-between;
  margin-bottom: 10px;
}

/* 调整标签名称和按钮的容器 */
.preference-item .checkbox-text {
  flex: 1;
  /* 使标签名称占据剩余空间 */
}

.preference-header,
.preference-item {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
}

/* 菜名列占比较大，可使用flex:1自动扩展 */
.item-column,
.item-header {
  flex: 1;
}

.like-column,
.like-header,
.dislike-column,
.dislike-header {
  width: 50px;
  /* 可根据实际需求调整 */
  text-align: left;
  margin-right: 10px;
}

.clear-column,
.clear-header {
  width: 30px;
  text-align: center;
}

.radio-group {
  display: flex;
  align-items: center;
  margin-right: 10px;
  /* 为清除按钮留出空间 */
}

/* 调整清除按钮的样式 */
.clear-button {
  background: none;
  border: none;
  color: #ff0000;
  font-size: 16px;
  cursor: pointer;
  padding: 0 5px;
  /* 调整内边距以对齐 */
  display: flex;
  align-items: center;
  /* 垂直居中 */
}

.radio-label {
  display: flex;
  align-items: center;
  margin-right: 10px;
}

.radio-label text {
  margin-left: 5px;
}

.restriction-tag {
  color: #fff;
  /* 白色文字 */
  padding: 5px 10px;
  border-radius: 15px;
  margin: 5px;
  font-size: 14px;
  display: inline-block;
}

/* 喜欢的标签样式 */
.tag-like {
  background-color: #4CAF50;
  /* 绿色 */
}

/* 禁止的标签样式 */
.tag-dislike {
  background-color: #F44336;
  /* 红色 */
}

.modal::-webkit-scrollbar {
  width: 8px;
}

.modal::-webkit-scrollbar-track {
  background: #f1f1f1;
  border-radius: 4px;
}

.modal::-webkit-scrollbar-thumb {
  background: #888;
  border-radius: 4px;
}

.modal::-webkit-scrollbar-thumb:hover {
  background: #555;
}